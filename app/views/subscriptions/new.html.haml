.grid.new_subscription
  .row
    - ab_test("image", "a", "b") do |version|
      - case version
      - when 'a'
        = image_tag "bjjmatch.png", :size => "940x167"
        - content_for :photo_credits do
          main photo by:
          = link_to "Emerson Ricardo Zamprogno", 'http://www.fotopedia.com/items/ezamprogno-yzhx6zlsz6I/slideshow'
      - when 'b'
        = image_tag "bjjmats.png", :size => "940x167"
        - content_for :photo_credits do
          main photo by:
          = link_to "Cid Costa Neto", 'http://commons.wikimedia.org/wiki/File:Campeonato_Brasileiro_Interclubes_de_Jiu-Jitsu_2009.jpg'

  .main
    .row
      = render 'signup_form'

    .row
      = render 'video_previews'

    .row
      = render 'new_stuff'
      = render 'upcoming'
    .row
      = render 'contribute'


  .sidebar
    = t('landing_page.explanation_html')




