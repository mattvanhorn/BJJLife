#academies.grid
  = standard_header

  .main
    .row
      - if flash[:notice]
        .notice= flash[:notice]
      = render academies_by_state

  .sidebar
    = link_to t('.add_academy_link'), new_academy_path, :class => 'btn'
    %p= t('.jump_to_state')
    %ul
      - academies_by_state.map(&:first).each do |state|
        %li= link_to full_us_state_name(state), "##{state}"
