#sign-in.grid
  .row
    %h2 Sign In

  .main
    .row
      -if flash[:alert]
        .errors_on_base.error= flash[:alert]

      = simple_form_for :sign_in, :url => '/auth/identity/callback' do |form|
        = form.input :email, :input_html => {:name => 'auth_key'}
        = form.input :password, :as => 'password', :input_html => {:name => 'password'}
        = form.submit 'Sign In', :class => 'btn'

  .sidebar
    NOT REGISTERED?
    %p
      = link_to "Sign Up Here", sign_up_path, :class => 'btn'

